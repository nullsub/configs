*filter

-A INPUT -i lo -j ACCEPT
-A OUTPUT -o lo -j ACCEPT

# Allows SSH connections 
-A INPUT -p tcp --dport 22 -j ACCEPT
-A OUTPUT -p tcp --sport 22 -j ACCEPT


# Reject all other inbound - default deny unless explicitly allowed policy:
-A INPUT -j REJECT
-A OUTPUT -j REJECT
-A FORWARD -j REJECT

COMMIT
